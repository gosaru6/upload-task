<%= form_with(model: @board, local: true) do |form| %>
  <% if @board.errors.any? %>
    <div id="error_explanation">
      <h2><%= @board.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @board.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-area">
    <div>
      <%= form.label :ないよう %>
    </div>
    <div>
      <%= form.text_area :content %>
    </div>
    <div class="field">
      <%= form.label :がぞう %>
      <%= form.file_field :image, id: :board_image, class: 'field' %>
    </div>
    <div class="submit-button">
      <%= form.submit :ほぞん %>
    <div>
  </div>
    <%= link_to "もどる", boards_path %>
  </div>
<% end %>
